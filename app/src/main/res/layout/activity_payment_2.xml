<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity_2">


    <Button
        android:id="@+id/Save_button_payment2"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginbutton"
        android:elevation="10dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout3_payment2"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout3_payment2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3_payment2" />

    <Button
        android:id="@+id/backButton_go_to_payment2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:elevation="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Account Detail"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1_payment2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="Routing Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Routing_number_payment2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2_payment2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:hint="Account Number"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_payment2"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout1_payment2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_payment2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Account_number_payment2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3_payment2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:hint="Confirm Account Number"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2_payment2"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2_payment2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2_payment2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Confirm_account_number_payment2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>