<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FleetActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton_FleetDispatcher"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:elevation="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView10_fleet_dispatcher"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Fleet"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listview_fleetDispatcher"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:padding="10dp" />


        <Button
            android:id="@+id/button_add_new_vehicle"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:text="Add New Vehicle"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:background="@drawable/loginbutton"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout3"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>