<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNewVehicleActivity">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        tools:context=".addNewVehicleActivity">

        <Button
            android:id="@+id/addnewVehicle_button"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/loginbutton"
            android:elevation="10dp"
            android:text="Add New Vehicle"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle7"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle7"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle7" />

        <Button
            android:id="@+id/backButton_go_to_addNewVehicle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:elevation="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add New Vehicle"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:hint="Registration No *"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_no_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Make and Model *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle2"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/model_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Color *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle3"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle3"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_color"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Vin *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle4"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle4"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vin_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Seti Decall"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle5"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle5"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_detailCAr"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle7"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Odometer *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle6"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle6"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/odometer_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>